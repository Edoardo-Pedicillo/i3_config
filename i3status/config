# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    interval = 1
    colors = true
    color_good="#FFFFFF"
    color_degraded="#ffd75f"
    color_bad="#d75f5f"
}

order += "volume master"
order += "battery 0"
order += "wireless wlan0"
order += "ethernet eth0"
order += "tztime local"

wireless wlan0 {
        format_up = " %quality at %essid"
        format_down = " down"
        min_width = 250
        align = "center"
}

tztime local {
        format = " %d-%m-%Y %H:%M "
        min_width = 150
        align = "center"
}

volume master {
    format = " %volume "
    format_muted = "  %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    format = "%status %percentage "
    format_down = "  "
    status_chr = " "
    status_bat = "  "
    status_unk = " UNKNOWN "
    #last_full_capacity = true
    status_full = "  " 
    path = "/sys/class/power_supply/BAT%d/uevent"
}
